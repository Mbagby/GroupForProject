<h1>Sessions#signup</h1>
<p>Find me in app/views/sessions/signup.html.erb</p>

<% flash.each do |key, value| %>
	<%= content_tag(:div, value, class: "alert#{key}")%>
<% end %>


<%= form_for @user, url: signup_path do |f| %>
        
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.text_field :password %>
        </div>

        <%= f.submit "Signup", id:"submit-user", class:"btn btn-block btn-success text-center" %>
<% end %> 